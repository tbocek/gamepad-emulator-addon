{
  "content_scripts": [
    {
      "js": [
        "gamepad.js"
      ],
      "matches": [
        "https://www.xbox.com/*"
      ],
      "run_at": "document_start"
    }
  ],
  "description": "Maps keyboard/mouse to an emulated gamepad",
  "browser_specific_settings": {
    "gecko": {
      "id": "{6e29be62-5a33-4308-b19a-fd73fea75a7e}"
    }
  },
  "icons": {
    "48": "icon48.png",
    "96": "icon96.png"
  },
  "manifest_version": 2,
  "name": "Keyboard/Mouse Emulated Gamepad",
  "page_action": {
    "default_icon": {}
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "version": "0.0.3"
}
